#!/bin/sh

errorExit() {
    echo "`date` *** $*" 1>&2
    exit 1
}

curl --silent --max-time 2 --insecure https://localhost:{{.ExternalPort}}/ -o /dev/null || errorExit "Error GET https://localhost:{{.ExternalPort}}/"
if ip addr | grep -q {{.APISERVER_VIP}}; then
    curl --silent --max-time 2 --insecure https://{{.APISERVER_VIP}}:{{.ExternalPort}}/ -o /dev/null || errorExit "Error GET https://{{.APISERVER_VIP}}:{{.ExternalPort}}/"
fi
